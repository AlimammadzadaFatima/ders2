@using yeniIl.Models
@{
    ViewData["Title"] = "Create";
}
@model Portfolio
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Create new Portfolio</h1>
        </div>
        <div class="col-lg-8 mx-auto">
            <form method="post" asp-action="create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input class="form-control" asp-for="Title" placeholder="Enter Title">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Text">Text</label>
                    <textarea style="height:100px;" class="form-control" asp-for="Text" placeholder="Enter  Text"></textarea>
                    <span class="text-danger" asp-validation-for="Text"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FileImage">FileImage</label>
                    <input class="form-control" asp-for="FileImage">
                    <span class="text-danger" asp-validation-for="FileImage"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a asp-action="index" asp-controller="portfolio" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    @await Html.PartialAsync("_ScriptsValidationPartial");
}