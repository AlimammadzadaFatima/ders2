@using yeniIl.Models
@{
    ViewData["Title"] = "Index";
    int count = 0;
}
@model List<Setting>


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="display:inline-block">Setting</h1>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Key</th>
                        <th scope="col">Value</th>
                        <th scope="col">Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Setting setting in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@setting.Key</td>
                            <td>@setting.Value</td>
                            <td>
                                <a asp-action="edit" asp-route-id="@setting.Id" class="btn btn-warning">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

