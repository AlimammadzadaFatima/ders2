@using yeniIl.ViewModels
@model HomeViewModel

<main>
    <section>
        <div class="bootstrap">
            <div class="container">
                <div class="img">
                    <img src="https://startbootstrap.github.io/startbootstrap-freelancer/assets/img/avataaars.svg" alt="">
                </div>
                <div class="main-text">
                    <h1>START BOOTSTRAP</h1>
                </div>
                <div class="icon">
                    <div class="line"></div>
                    <div class="star"><i class="fas fa-star"></i></div>
                    <div class="line"></div>
                </div>
                <div class="text">
                    <p>Graphic Artist - Web Designer - Illustrator</p>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="portfolio">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h3>
                            PORTFOLIO
                        </h3>
                        <div class="icon">
                            <div class="line"></div>
                            <div class="star"><i class="fas fa-star"></i></div>
                            <div class="line"></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @foreach (var item in Model.portfolios)
                    {
                        <div class="col-md-6 col-lg-4 mb-5">
                            <div class="hover">
                                <i class="fas fa-plus"></i>
                            </div>
                            <img src="~/uploads/portfolios/@item.Image" alt="">
                        </div>
                    }

                </div>
            </div>
        </div>
    </section>
    <!-- Modal -->
    <div class="modal   " id="portfolioModal" tabindex="-1" aria-labelledby="portfolioModal"
         aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">

            </div>
        </div>
    </div>
    </div>
    <section>
        <div class="about">
            <div class="container">
                <div class="row">
                    <div class="col-12">

                        <h3>ABOUT</h3>

                        <div class="icon">
                            <div class="line"></div>
                            <div class="star"><i class="fas fa-star"></i></div>
                            <div class="line"></div>
                        </div>
                    </div>

                    <div class="col-6">
                        <p>Freelancer is a free bootstrap theme created by Start Bootstrap. The download includes the complete source files including HTML, CSS, and JavaScript as well as optional SASS stylesheets for easy customization.</p>
                    </div>
                    <div class="col-6">
                        <p>Freelancer is a free bootstrap theme created by Start Bootstrap. The download includes the complete source files including HTML, CSS, and JavaScript as well as optional SASS stylesheets for easy customization.</p>
                    </div>
                    <div class="col-12">
                        <div class="download">
                            <a href=""> <i class="fas fa-download"></i>  Free Download!</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="contact">
            <div class="container">

                <div class="col-12">
                    <h2>CONTACT ME</h2>
                    <div class="icon">
                        <div class="line"></div>
                        <div class="star"><i class="fas fa-star"></i></div>
                        <div class="line"></div>
                    </div>
                </div>
                <div class="form">
                    <input class="form-control is-invalid" id="name" type="text" placeholder="Enter your name..." data-sb-validations="required" data-sb-can-submit="no">

                </div>
                <p></p>
                <p> </p>
                <h1>x</h1>
            </div>
        </div>
    </section>
</main>

 